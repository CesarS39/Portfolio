<section class="relative h-screen overflow-hidden bg-neutral-950 flex items-center justify-center">
  <h1
    class="text-[10vw] font-extrabold tracking-tight text-center z-10 gradient-text will-change-transform transition-transform duration-150 ease-out"
    id="parallax-title"
  >
    César Enríquez
  </h1>

  <script is:inline>
    window.addEventListener("scroll", () => {
      const title = document.getElementById("parallax-title");
      const scrollY = window.scrollY;
      const offset = scrollY * 0.3; // Un poco menos que antes
      const scale = 1 + scrollY * 0.0002; // Sutil zoom
      title.style.transform = `translateY(${offset}px) scale(${scale})`;
    });
  </script>

  <style>
    .gradient-text {
      display: inline-block;
      background: linear-gradient(
        to bottom,
        rgba(255, 255, 255, 1) 70%,
        rgba(160, 160, 160, 0.5) 90%,
        rgba(0, 0, 0, 0) 100%
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  </style>
</section>