---
// src/components/BentoCard.astro
const { title, description, image, className } = Astro.props;
---

<div class={`group relative overflow-hidden rounded-2xl bg-[#1e1e1e] text-white shadow-lg ${className}`}>
  <img loading="lazy" src={image} alt={title} class="absolute inset-0 w-full h-full object-cover opacity-80 group-hover:opacity-30 transition duration-300" />
  <div class="relative p-4 h-full flex flex-col justify-between">
    <h3 class="text-xl md:text-2xl font-bold">{title}</h3>
    <p class="opacity-0 group-hover:opacity-100 text-sm md:text-base text-white mt-2 transition duration-300">
      {description}
    </p>
  </div>
</div>