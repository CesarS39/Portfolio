---
import BaseSection from "../atoms/BaseSection.astro";
import Heading from "../atoms/Heading.astro";
import BentoCard from "../molecules/BentoCard.astro";

interface Interest {
  title: string;
  description: string;
  image: string;
  className?: string;
}

const { interests } = Astro.props as { interests: Interest[] };
---

<BaseSection id="intereses">
  <Heading level="h2" className="mb-20 fade-up">
    Intereses y Pasatiempos
  </Heading>

  <div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
      {interests.map((item) => (
        <BentoCard
          title={item.title}
          description={item.description}
          image={item.image}
          className={item.className}
        />
      ))}
    </div>
  </div>
</BaseSection>