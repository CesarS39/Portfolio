---
const {
  image,
  alt,
  title,
  subtitle,
  date,
  extra,
  glow = "glow-pink", 
} = Astro.props;
---

<div class={`bg-neutral-800 p-8 rounded-2xl text-center glow-card ${glow} fade-up`}>
  <img
    loading="lazy"
    src={image}
    alt={alt}
    class="w-44 h-44 object-contain mx-auto mb-4"
  />
  <h3 class="text-xl font-semibold text-white">{title}</h3>
  <p class="text-neutral-400 text-sm mt-1">{subtitle}</p>
  <p class="text-neutral-500 text-sm">{date}</p>
  {extra && (
    <p class="text-neutral-500 text-xs italic mt-1">{extra}</p>
  )}
</div>