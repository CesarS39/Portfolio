---
import BaseSection from "../atoms/BaseSection.astro";
import Heading from "../atoms/Heading.astro";
import ProjectCard from "../molecules/ProjectCard.astro";

interface Project {
  title: string;
  description: string;
  image: string;
  repo?: string;
  link?: string;
  techStack?: string[];
  featured?: boolean;
}

const { projects } = Astro.props as { projects: Project[] };
---

<!-- organisms/ProjectsSection.astro CORREGIDO --><!-- Usar BaseSection con clase personalizada para mayor ancho -->
<BaseSection id="projects" className="!max-w-7xl">
  <!-- Header -->
  <div class="text-center mb-16">
    <Heading
      level="h2"
      className="text-4xl font-bold mb-6 bg-gradient-to-r from-cyan-400 to-indigo-500 bg-clip-text text-transparent"
    >
      Proyectos Destacados
    </Heading>
    <div
      class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-indigo-500 mx-auto mb-6"
    >
    </div>
    <p class="text-neutral-300 max-w-2xl mx-auto">
      Explora algunos de mis proyectos más significativos, desde sistemas
      empresariales hasta aplicaciones móviles innovadoras.
    </p>
  </div>

  <!-- Grid con mejor espaciado -->
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
    {
      projects.map((project, index) => (
        <div class="h-full">
          <ProjectCard {...project} />
        </div>
      ))
    }
  </div>

  <!-- Stats section más compacta -->
  <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
    <div
      class="text-center bg-gradient-to-br from-neutral-800/50 to-neutral-900/50 rounded-xl p-4 border border-neutral-700"
    >
      <div class="text-xl font-bold text-indigo-400">{projects.length}+</div>
      <div class="text-xs text-neutral-400">Proyectos</div>
    </div>
    <div
      class="text-center bg-gradient-to-br from-neutral-800/50 to-neutral-900/50 rounded-xl p-4 border border-neutral-700"
    >
      <div class="text-xl font-bold text-cyan-400">5+</div>
      <div class="text-xs text-neutral-400">Tecnologías</div>
    </div>
    <div
      class="text-center bg-gradient-to-br from-neutral-800/50 to-neutral-900/50 rounded-xl p-4 border border-neutral-700"
    >
      <div class="text-xl font-bold text-purple-400">100%</div>
      <div class="text-xs text-neutral-400">Full-Stack</div>
    </div>
    <div
      class="text-center bg-gradient-to-br from-neutral-800/50 to-neutral-900/50 rounded-xl p-4 border border-neutral-700"
    >
      <div class="text-xl font-bold text-green-400">2025</div>
      <div class="text-xs text-neutral-400">Activo</div>
    </div>
  </div>
</BaseSection>
