---
import "../styles/global.css";
---

<section class="relative h-screen overflow-hidden bg-neutral-950 flex items-center justify-center">
  <h1
    class="text-[10vw] font-extrabold tracking-tight text-center z-10 gradient-text will-change-transform transition-transform duration-100 ease-out"
    id="parallax-title"
  >
    César Enríquez
  </h1>

  <script is:inline>
    window.addEventListener("scroll", () => {
      const title = document.getElementById("parallax-title");
      const scrollY = window.scrollY;
      title.style.transform = `translateY(${scrollY * 0.3}px)`;
    });
  </script>

  <style>
    .gradient-text {
      display: inline-block;
      background: linear-gradient(
        to bottom,
        rgba(255, 255, 255, 1) 65%,
        rgba(100, 100, 100, 0.5) 85%,
        rgba(0, 0, 0, 0) 100%
      );
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  </style>
</section>