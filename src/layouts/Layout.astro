---
import "../styles/global.css";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>César Enríquez | Portafolio</title>
    <link rel="icon" type="image/x-icon" href="/Portfolio/icons/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css"
    />
  </head>
  <body class="bg-neutral-950 text-white">
    <slot />

    <a
      href="https://cesars39.github.io/Portfolio/"
      class="fixed bottom-6 right-6 z-50 bg-white/10 backdrop-blur-md text-white p-3 rounded-full shadow-lg transition-all duration-300 group border border-white/20 hover:bg-white/20"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-6 h-6 group-hover:scale-110 transition"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3 12l9-9 9 9M4 10v10h5v-6h6v6h5V10"></path>
      </svg>
    </a>

    <script is:inline>
      const homeButton = document.querySelector(
        'a[href="https://cesars39.github.io/Portfolio/"]'
      );
      homeButton.addEventListener("click", (e) => {
        if (window.location.href === "https://cesars39.github.io/Portfolio/") {
          e.preventDefault();
          window.scrollTo({ top: 0, behavior: "smooth" });
        } else {
          sessionStorage.setItem("fromHomeButton", "true");
        }
      });
    </script>
    <style>
      html,
      body {
        overflow-x: hidden;
        max-width: 100vw;
      }

      /* Mejorar el centrado en móviles */
      @media (max-width: 768px) {
        /* Hero section ajustes */
        .gradient-text {
          font-size: clamp(2.5rem, 12vw, 6rem) !important;
          line-height: 0.9;
          word-spacing: -0.1em;
          letter-spacing: -0.02em;
        }

        /* Secciones con mejor padding en móvil */
        section {
          padding-left: 1rem;
          padding-right: 1rem;
        }

        /* Cards responsivas */
        .grid {
          grid-template-columns: 1fr;
        }

        /* Texto más legible en móvil */
        h1,
        h2,
        h3 {
          text-align: center;
          word-wrap: break-word;
          hyphens: auto;
        }
      }

      /* Para pantallas muy pequeñas (menos de 375px) */
      @media (max-width: 375px) {
        .gradient-text {
          font-size: clamp(2rem, 10vw, 4rem) !important;
          line-height: 0.85;
        }

        /* Padding reducido en pantallas muy pequeñas */
        section {
          padding-left: 0.75rem;
          padding-right: 0.75rem;
        }
      }

      /* Mejoras para el parallax en móvil */
      @media (max-width: 768px) {
        [id*="parallax"] {
          transform: none !important;
        }
      }

      /* Fix para prevenir desbordamiento horizontal */
      * {
        box-sizing: border-box;
      }

      .container,
      .max-w-4xl,
      .max-w-5xl,
      .max-w-6xl,
      .max-w-7xl {
        width: 100%;
        max-width: calc(100vw - 2rem);
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </body>
</html>
