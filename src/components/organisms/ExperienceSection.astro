---
import BaseSection from "../atoms/BaseSection.astro";
import Heading from "../atoms/Heading.astro";
import CardBase from "../atoms/CardBase.astro";

interface Experience {
  company: string;
  role: string;
  year: string;
  items: string[];
}

const { experiences } = Astro.props as { experiences: Experience[] };
---

<BaseSection id="experiencia">
  <div class="text-center mb-16">
    <Heading level="h2" className="text-4xl font-bold mb-6 bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent">
       Experiencia Laboral
    </Heading>
    <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-indigo-500 mx-auto mb-6"></div>
  </div>

  <div class="max-w-5xl mx-auto">
    {experiences.map((exp) => (
      <CardBase className="mb-8">
        <h3 class="text-2xl font-semibold text-white mb-1">{exp.company}</h3>
        <p class="text-sm text-neutral-400 italic mb-4">
          {exp.role} ({exp.year})
        </p>
        <ul class="list-disc list-inside space-y-2 max-w-3xl mx-auto text-left text-md text-neutral-300">
          {exp.items.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </CardBase>
    ))}
  </div>
</BaseSection>