---
const { title, description, image, className } = Astro.props;
---

<div class={`group relative overflow-hidden rounded-2xl bg-[#1e1e1e] text-white shadow-lg ${className}`}>
  <img
    loading="lazy"
    src={image}
    alt={title}
    class="absolute inset-0 w-full h-full object-cover transition duration-300
           opacity-30 md:opacity-80 md:group-hover:opacity-30"
  />
  <div class="relative p-4 h-full flex flex-col justify-between">
    <h3 class="text-xl md:text-2xl font-bold">{title}</h3>
    <p class="text-white text-sm md:text-base mt-2 transition duration-300
              opacity-100 md:opacity-0 md:group-hover:opacity-100">
      {description}
    </p>
  </div>
</div>