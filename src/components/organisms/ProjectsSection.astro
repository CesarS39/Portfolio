---
import BaseSection from "../atoms/BaseSection.astro";
import Heading from "../atoms/Heading.astro";
import ProjectCard from "../molecules/ProjectCard.astro";

interface Project {
  title: string;
  description: string;
  image: string;
  repo?: string;
  link?: string;
}

const { projects } = Astro.props as { projects: Project[] };
---

<BaseSection id="projects">
  <Heading level="h2" className="mb-12">
    Proyectos
  </Heading>

  <div class="grid grid-cols-1 sm:grid-cols-1 gap-5 max-w-xl mx-auto">
    {projects.map((project) => (
      <div class="transition-transform duration-300 transform hover:scale-[1.02]">
        <ProjectCard {...project} />
      </div>
    ))}
  </div>
</BaseSection>