        </a>
      )}

      {link && (
        <a href={link} target="_blank" class="cursor-pointer">
          <button
            class="cursor-pointer relative inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-medium text-white rounded-lg group bg-gradient-to-br from-cyan-400 to-indigo-500 group-hover:from-cyan-400 group-hover:to-indigo-500 focus:ring-4 focus:outline-none focus:ring-indigo-200 dark:focus:ring-indigo-800"
          >
            <span class="relative px-5 py-2 transition-all ease-in duration-75 bg-neutral-900 rounded-md group-hover:bg-transparent">
